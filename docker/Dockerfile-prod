FROM node:20-alpine

# Install dependencies
RUN apk add --no-cache nginx

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy the rest of the application
COPY . .

# Build the application
RUN npm run build

# Copy environment variables for production (but not sensitive ones)
RUN cp .env.production ./build/.env 2>/dev/null || touch ./build/.env

# Install production dependencies in build directory
WORKDIR /app/build
RUN npm ci --omit=dev

# Create nginx configuration
WORKDIR /app
RUN mkdir -p /etc/nginx/conf.d
COPY docker/nginx/default.conf /etc/nginx/conf.d/default.conf

# Expose ports
EXPOSE 80 3333

# Create a startup script
RUN echo '#!/bin/sh\nnginx\nexec node bin/server.js' > /app/start.sh && chmod +x /app/start.sh

# Start Nginx and Node.js application
CMD ["/app/start.sh"]
